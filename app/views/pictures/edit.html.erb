  <% end %>

  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :picture_title %>
  </div>

  <div class="field">
    <%= f.label :コメント %><br>
    <%= f.text_area :picture_comment %>
  </div>
  <div class="field">
    <%= f.label :タグ１ %><br>
    <%= f.collection_select :picture_tag1_id, Tag.all, :tag_id, :tag_name %>
