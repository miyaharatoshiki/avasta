  </div>
  <div class="field">
    <%= f.label :タグ３ %><br>
    <%= f.collection_select :picture_tag3_id, Tag.all, :tag_id, :tag_name %>
  </div>

  <div class="actions">
    <%= f.submit :送信 %>
  </div>
<% end %>

