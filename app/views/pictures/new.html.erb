<h3>写真の投稿</h3>

<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="nondisplayFrame">
  <div class="field">
    <%= f.label :picture_id %><br>
    <%= f.number_field :picture_id %>
  </div>
</div>

<br>

  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :picture_title %>
  </div>

<br>

  <div class="field">
    <%= f.label :写真 %><br>
    <%= f.file_field :picture_data %>
  </div>

<br>

  <div class="field">
    <%= f.label :コメント %><br>
    <%= f.text_area :picture_comment %>
  </div>



  <div class="field">

    <%= f.label :タグ選択 %><br>
    <%= f.collection_select :picture_tag1_id, Tag.all, :tag_id, :tag_name %>
    <%= f.collection_select :picture_tag2_id, Tag.all, :tag_id, :tag_name %>
    <%= f.collection_select :picture_tag3_id, Tag.all, :tag_id, :tag_name %>
  </div>


<%= link_to 'タグの追加', new_tag_path(@tag) %>
<br>
<br>
<div class="nondisplayFrame">
  <div class="field">
    <%= f.label :picture_time %><br>
    <%= f.datetime_select :picture_time %>
  </div>
</div>

  <div class="actions">
    <%= f.submit :送信 %>
  </div>
<% end %>

<br>
<br>
<br>
<%= link_to '戻る', pictures_path %>
