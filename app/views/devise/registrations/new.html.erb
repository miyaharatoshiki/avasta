<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "社員番号" %><br />
    <%= f.text_field :user_number %>
  </div>

  <div class="field">
    <%= f.label "氏名" %><br />
    <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label "勤務地" %><br />
    <%= f.text_field :user_place %>
  </div>

  <div class="field">
    <%= f.label "所属サークル" %><br />
    <%= f.text_field :user_circle %>
  </div>

  <div class="field">
    <%= f.label "入社年度" %><br />
    <%= f.text_field :user_year %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
